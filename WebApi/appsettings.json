{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "Database": "Data Source=FileExplorer.db"
  },
  "FileSettings": {
    "MaxBytes": 1000000000,
    "AcceptedImageFileTypes": [
      ".jpg",
      ".jpeg",
      ".png"
    ],
    "AcceptedVideoFileTypes": [
      ".jpg",
      ".jpeg",
      ".png",
      ".mp4"

    ],
    "AcceptedFileTypes": [
      ".pdf"
    ]
  },
  "Files": {
    "StaticFiles": "Content/",
    "Paths": {
      "Media": "Content/Media/"
    }
  }
}
